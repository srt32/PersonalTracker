<h1>Listing poops</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Consistency</th>
      <th>Notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @poops.each do |poop| %>
      <tr>
        <td><%= poop.user_id %></td>
        <td><%= poop.consistency %></td>
        <td><%= poop.notes %></td>
        <td><%= link_to 'Show', user_poop_path(@user,poop) %></td>
        <td><%= link_to 'Edit', edit_user_poop_path(@user,poop) %></td>
        <td><%= link_to 'Destroy', user_poop_path(@user,poop), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

